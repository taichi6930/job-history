{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 150
      },
      "no-exclamation-question-mark": false,
      "ja-no-mixed-period": {
        "periodMark": "。",
        "allowPeriodMarks": [".", "。"],
        "allowEmojiAtEnd": true
      },
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "も"]
      }
      ,
      "max-kanji-continuous-len": {
        "max": 6,
        "allow": [
          "普通自動車運転免許",
          "日本商工会議所簿記検定試験",
          "宅地建物取引士試験"
        ]
      }
    }
  }
}
