{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 150
      },
      "no-exclamation-question-mark": false,
      "ja-no-mixed-period": {
        "periodMark": "。",
        "allowPeriodMarks": [".", "。"],
        "allowEmojiAtEnd": true
      },
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["か", "も"]
      }
    }
  }
}
